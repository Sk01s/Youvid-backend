{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "jest"]
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src", "__tests__"]
}
